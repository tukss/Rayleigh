F90  = /usr/local/mpich2-1.0.7/bin/mpif90
F90 = mpif90

#   Flags for the LAPack Libraries
LIBFLAGS = -L/usr/lib/x86_64-linux-gnu -lfftw3 -L/usr/lib -lblas -llapack

F90FLAGS = -O2 -fbounds-check -I/usr/include
PROG =	rayleigh

.SUFFIXES: .o .F90 .f .F
include object_list

$(PROG) :$(DSOBJ) $(PFOBJ) $(MOBJ) $(IOOBJ) $(POBJ) $(TOBJ) $(MAINOBJ)
	$(F90) $(F90FLAGS) -o  $(PROG) $(DSOBJ) $(PFOBJ) $(MOBJ) $(IOOBJ) $(POBJ) $(TOBJ) $(MAINOBJ) $(LIBFLAGS)
.F90.o :
	$(F90) $(F90FLAGS) -c $<
clean : 
	rm -f *.o *.mod pseudo
ready :

